#!/bin/sh

echo "{\"text\": \"checking updatesâ€¦\"}"
output="$(sudo checkupdates)"
if [ $? -eq 1 ]; then
		echo "{\"text\": \"ERROR: Cannot fetch updates\"}"
		exit 1
fi
count="$(echo "${output}" | wc -l)"
pkgnames="$(echo "${output}" | awk '{print$1}')"
echo "{\"text\":\""${count}"\",\"tooltip\":\""${pkgnames}"\"}"
